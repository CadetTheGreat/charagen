#!/bin/bash
echo "Switching to dev..."
git stash
git checkout dev

echo
echo "Building..."
jekyll b

echo
echo "Switching to master..."
git stash
git checkout master

echo
echo "Replacing master with new build..."
ls | grep -v _site | xargs rm -r
mv _site/* ./
rmdir _site

echo "Committing the change..."
git add .
git commit -m "New build on $(date)"
git checkout dev

echo
echo "Done! You can commit now."
